//Code: Extend the previous task by creating an array of Student structures. Write a program that allows the user to input information for multiple students and then displays the details for each student.
//Author: Saba Raushan Hussain 

#include <stdio.h>

struct Student {
    char name[50];
    int roll_no;
    float marks;
};


void displayStudents(struct Student students[], int n) {
    printf("\n Details of Students:\n");
    for (int i = 0; i < n; i++) {
        printf("Student %d:\n", i + 1);
        printf("Name: %s\n", students[i].name);
        printf("Roll No: %d\n", students[i].roll_no);
        printf("Marks: %.2f\n\n", students[i].marks);
    }
}

int main() {
    int n;
    
    printf("Enter the number of students: ");
    scanf("%d", &n);
    

    struct Student students[n];
    
	for (int i = 0; i < n; i++) {
        printf("\nEnter details for Student %d:\n", i + 1);
        
        getchar();
        
        printf("Enter name: ");
        fgets(students[i].name, 50, stdin);
        
        printf("Enter roll number: ");
        scanf("%d", &students[i].roll_no);
        
        printf("Enter marks: ");
        scanf("%f", &students[i].marks);
    }
    
    displayStudents(students, n);
    
    return 0;
}
